# ===========================================
# LUMORA + N8N DEPLOYMENT CONFIGURATION
# ===========================================

# Domain configuration (use your actual domain or IP for development)
DOMAIN=localhost
# For production with domain: DOMAIN=your-domain.com

# Let's Encrypt email for SSL certificates (leave blank for IP mode)
LE_EMAIL=
# For production: LE_EMAIL=your-email@domain.com

# ===========================================
# N8N CONFIGURATION
# ===========================================

# n8n port (default: 5678)
N8N_PORT=5678

# n8n host (leave empty for IP mode, set to domain for production)
N8N_HOST=
# For production: N8N_HOST=your-domain.com

# n8n protocol (http for development, https for production)
N8N_PROTOCOL=http
# For production: N8N_PROTOCOL=https

# Webhook URL (set according to your access method)
WEBHOOK_URL=http://localhost:5678
# For production: WEBHOOK_URL=https://n8n.your-domain.com

# Maximum payload size in MB
N8N_PAYLOAD_SIZE_MAX=64

# Timezone settings
GENERIC_TIMEZONE=Asia/Kolkata
TZ=Asia/Kolkata

# n8n encryption key (CRITICAL: Generate a secure 48-character base64 key)
N8N_ENCRYPTION_KEY=### FILL_ME_IN ### - Generate with: openssl rand -base64 36

# ===========================================
# API KEYS & SECRET CONFIGURATION
# ===========================================

# Canva API Configuration
CANVA_API_KEY=### FILL_ME_IN ###
CANVA_CLIENT_ID=### FILL_ME_IN ###
CANVA_CLIENT_SECRET=### FILL_ME_IN ###

# Supabase Configuration  
SUPABASE_URL=### FILL_ME_IN ###
SUPABASE_ANON_KEY=### FILL_ME_IN ###
SUPABASE_SERVICE_KEY=### FILL_ME_IN ###

# OpenAI Configuration
OPENAI_API_KEY=### FILL_ME_IN ###
OPENAI_ORG_ID=### FILL_ME_IN ### (optional)

# Additional API Keys (add as needed)
# GROQ_API_KEY=### FILL_ME_IN ###
# ANTHROPIC_API_KEY=### FILL_ME_IN ###
# GOOGLE_API_KEY=### FILL_ME_IN ###

# ===========================================
# SECURITY & BACKUP SETTINGS
# ===========================================

# Backup retention in days (default: 14)
BACKUP_RETENTION_DAYS=14

# Backup directory
BACKUP_DIR=/var/backups/n8n

# ===========================================
# DEVELOPMENT/DEBUGGING
# ===========================================

# Log levels (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
N8N_LOG_LEVEL=info

# Enable/disable features for development
DEV_MODE=false